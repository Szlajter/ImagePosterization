<Window x:Class="ImagePosterization.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImagePosterization"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1650">
    <Grid>
        <Button Content="Import" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" Click="Button_Click"/>
        <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
            <Image x:Name="importedImage" Height="400" Width="800"/>
            <Image x:Name="processedImage" Height="400" Width="800"/>
        </StackPanel>
    </Grid>
</Window>
